{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "environmentName": {
      "type": "string"
    },
    "containerAppName": {
      "type": "string"
    },
    "image": {
      "type": "string"
    },
    "acrName": {
      "type": "string"
    },
    "b2cClientId": { "type": "string" },
    "b2cTenantId": { "type": "string" },
    "b2cDomain": { "type": "string" },
    "b2cPolicy": { "type": "string" }
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2022-10-01",
      "name": "[concat('log-', parameters('environmentName'))]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "name": "PerGB2018"
        },
        "retentionInDays": 30
      }
    },
    {
      "type": "Microsoft.App/managedEnvironments",
      "apiVersion": "2023-05-01",
      "name": "[parameters('environmentName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', concat('log-', parameters('environmentName')))]"
      ],
      "properties": {
        "appLogsConfiguration": {
          "destination": "log-analytics",
          "logAnalyticsConfiguration": {
            "customerId": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', concat('log-', parameters('environmentName'))), '2022-10-01').customerId]",
            "sharedKey": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces', concat('log-', parameters('environmentName'))), '2022-10-01').primarySharedKey]"
          }
        }
      }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2023-05-01",
      "name": "[parameters('containerAppName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', parameters('environmentName'))]"
      ],
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', parameters('environmentName'))]",
        "configuration": {
          "ingress": {
            "external": true,
            "targetPort": 80,
            "transport": "auto"
          },
          "registries": [
            {
              "server": "[concat(parameters('acrName'), '.azurecr.io')]",
              "username": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', parameters('acrName')), '2023-01-01-preview').username]",
              "passwordSecretRef": "acr-password"
            }
          ],
          "secrets": [
            {
              "name": "acr-password",
              "value": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', parameters('acrName')), '2023-01-01-preview').passwords[0].value]"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "name": "myapp",
              "image": "[parameters('image')]",
              "env": [
                { "name": "AzureAdB2C__Instance", "value": "[concat('https://', parameters('b2cDomain'), '/')]"},
                { "name": "AzureAdB2C__ClientId", "value": "[parameters('b2cClientId')]"},
                { "name": "AzureAdB2C__TenantId", "value": "[parameters('b2cTenantId')]"},
                { "name": "AzureAdB2C__Domain", "value": "[parameters('b2cDomain')]"},
                { "name": "AzureAdB2C__SignUpSignInPolicyId", "value": "[parameters('b2cPolicy')]"}
              ],
              "resources": {
                "cpu": 0.5,
                "memory": "1Gi"
              }
            }
          ],
          "scale": {
            "minReplicas": 1,
            "maxReplicas": 2
          }
        }
      }
    }
  ],
  "outputs": {
    "appUrl": {
        "type": "string",
        "value": "[concat('https://', reference(resourceId('Microsoft.App/containerApps', parameters('containerAppName'))).latestRevisionFqdn)]"
        }
    }
}
